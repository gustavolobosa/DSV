@model verificable.ViewModels.MultipropietarioComunaViewModel

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm("Index", "Multipropietarios", FormMethod.Post))
{
    <div class="form-group">
        <label for="searchInput">Comuna:</label>
        <select name="comunaInput" id="comunaInput" class="form-control" required>
            <option value="">Seleccione una Comuna</option>
            @foreach (var comuna in Model.ComunasList)
            {
                <option value="@comuna.Nombre">@comuna.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="searchInput">Manzana:</label>
        <input type="text" name="manzanaInput" id="manzanaInput" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="searchInput">Predio:</label>
        <input type="text" name="predioInput" id="predioInput" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="searchInput">Año:</label>
        <select type="text" name="añoInput" id="añoInput" class="form-control" required >
            <option value = "">Seleccione un año</option>
            <option value = "2019">2019</option>
            <option value = "2020">2020</option>
            <option value = "2021">2021</option>
            <option value = "2022">2022</option>
            <option value = "2023">2023</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
}

<table class="table">
    <thead>
        <tr>
            <th>Comuna</th>
            <th>Manzana</th>
            <th>Predio</th>
            <th>RUN/RUT</th>
            <th>Fojas</th>
            <th>Fecha de inscripción</th>
            <th>Número de inscripción</th>
            <th>Porcentaje de derecho</th>
            <th>Vigencia inicial</th>
            <th>Vigencia final</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var multipropietario in Model.MultipropietariosList)
        {
            <tr>
                <td>@multipropietario.Comuna</td>
                <td>@multipropietario.Manzana</td>
                <td>@multipropietario.Predio</td>
                <td>@multipropietario.RunRut</td>
                <td>@multipropietario.Fojas</td>
                <td>@multipropietario.FechaInscripcion</td>
                <td>@multipropietario.NumInscripcion</td>
                <td>@multipropietario.PorcentajeDerecho</td>
                <td>@(multipropietario.VigenciaInicial != null ? multipropietario.VigenciaInicial.Value.ToString("yyyy") : "-")</td>
                <td>@(multipropietario.VigenciaFinal != null ? multipropietario.VigenciaFinal.Value.ToString("yyyy") : "-")</td>


            </tr>
        }
    </tbody>
</table>

